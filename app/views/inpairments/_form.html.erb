<%= simple_form_for([@project, @task,@inpairment]) do |f|  %>
    <%= render "shared/errors", object: @inpairment %>

    <div class="panel-body">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="field">
            <%= f.label :description %> <br>
            <%= f.text_area :description, class: 'form-control' , :placeholder => "Descripcion" %>
            <%= f.label :tipo %> <br>
            <%= f.select :tipo, Inpairment.tipos.keys.map {|tipo| [tipo.titleize ,tipo ]} %>
            <%= f.hidden_field :task_id, :value => @task.id %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= button_tag(type: 'submit', class: "btn btn-default btn-sm") do %>
            <%  if params[:action] == 'new' %>
                Crear Observacion
            <% else %>
                Actualizar Observacion
            <% end %>
        <% end %>
        <%= link_to :back, :class => 'btn btn-default btn-sm' do %>Cancelar<% end %>
      </div>
    </div>
<% end %>
